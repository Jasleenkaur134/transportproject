    <div class="container mt-5">
        <h2>Booking Form</h2>
        <br>
        <form id="bookingForm" action="/bookings" method="post" enctype="multipart/form-data">
            <!-- Name Input -->
            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input type="text" name="name" class="form-control" id="name" required>
            </div>

            <!-- Email Input -->
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" name="email" class="form-control" id="email" required>
            </div>

            <!-- Phone Number Input -->
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" name="phone" class="form-control" id="phone" pattern="[0-9]{10}" required>
                <small class="text-muted">Enter a 10-digit phone number.</small>
            </div>

            <!-- From City -->
            <div class="mb-3">
                <label for="From" class="form-label">From</label>
                <select class="form-select" name="from" id="From" required>
                    <option value="Jalandhar">Jalandhar</option>
                </select>
            </div>

            <!-- To City -->
            <div class="mb-3">
                <label for="To" class="form-label">To</label>
                <select class="form-select" name="to" id="To" required>
                    <option value="Mandi Gobindgarh">Mandi Gobindgarh</option>
                    <option value="Patiala">Patiala</option>
                    <option value="Ludhiana">Ludhiana</option>
                </select>
            </div>

            <!-- Weight Input -->
            <div class="mb-3">
                <label for="weight" class="form-label">Estimated Weight value(in Tonnes)</label>
                <input type="number" name="weight" class="form-control" id="weight" min="1" required>
            </div>
            <!--Sender Address-->
            <div class="mb-3">
                <label for="address" class="form-label">Sender's Address</label>
                <input type="text" name="Senderaddress" class="form-control" id="address" required>
            </div>
            <!-- Receiver Address -->
            <div class="mb-3">
                <label for="address" class="form-label">Destination Address</label>
                <input type="text" name="Receiveraddress" class="form-control" id="address" required>
            </div>

            <!-- Booking Date -->
            <div class="mb-3">
                <label for="bDate" class="form-label">Booking Date</label>
                <input type="date" name="bDate" class="form-control" id="bDate" required>
            </div>

            <!-- Delivery Date -->
            <div class="mb-3">
                <label for="dDate" class="form-label">Estimated Delivery Date</label>
                <input type="date" name="dDate" class="form-control" id="dDate" required>
            </div>

            <!-- Delivery Time -->
            <div class="mb-3">
                <label for="dTime" class="form-label">Estimated Delivery Time</label>
                <input type="time" name="dTime" class="form-control" id="dTime" required>
            </div>

            <!-- Price Display (Read-Only) -->
            <div class="mb-3">
                <label for="price" class="form-label">Total Price</label>
                <input type="text" name="price" class="form-control" id="price" value="Rs." readonly>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Book Now</button>
        </form>
