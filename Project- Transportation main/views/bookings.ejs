document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('bookingForm');
    const toSelect = document.getElementById('To');
    const weightInput = document.getElementById('weight');
    const priceInput = document.getElementById('price');

    const calculatePrice = () => {
        const to = toSelect.value;
        const weight = parseFloat(weightInput.value) || 0;

        const basePrice = 500;
        const distanceRates = {
            "Mandi Gobindgarh": 164,
            "Patiala": 157,
            "Ludhiana": 64,
        };

        if (!distanceRates[to]) {
            priceInput.value = "Rs. 0";
            return;
        }

        const rate = distanceRates[to];
        const price = basePrice + rate * weight;
        priceInput.value = `Rs. ${price.toFixed(2)}`;
    };

    // Calculate price
    toSelect.addEventListener('change', calculatePrice);
    weightInput.addEventListener('input', calculatePrice);

    // Check login status before booking
    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        try {
            const sessionCheck = await fetch('/check-login');
            const result = await sessionCheck.json();

            if (!result.loggedIn) {
                alert('Please sign up or login to continue booking.');
                window.location.href = '/signup.html';
                return;
            }

            const formData = new FormData(form);
            const response = await fetch('/bookings', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                const errorData = await response.json();
                throw new Error(errorData.error || 'Booking failed');
            }

            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            successModal.show();

            setTimeout(() => {
                window.location.href = '/';
            }, 3000);
        } catch (error) {
            console.error('Error:', error);
            alert(error.message);
        }
    });
});

