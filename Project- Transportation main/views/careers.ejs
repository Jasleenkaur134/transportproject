<script>
    const jobs = [
        {
            title: "Delivery Driver",
            qualifications: [
                "Valid driverâ€™s license (commercial if required)",
                "Experience in material transportation",
                "Good knowledge of routes and navigation"
            ]
        },
        {
            title: "Vehicle Maintenance Technician",
            qualifications: [
                "Experience in vehicle repair and maintenance",
                "Knowledge of engine diagnostics",
                "Ability to work with different vehicle types"
            ]
        },
        {
            title: "Route Planner",
            qualifications: [
                "Strong understanding of mapping and navigation software",
                "Ability to optimize delivery routes",
                "Experience in traffic pattern analysis"
            ]
        },
        {
            title: "Operations Coordinator",
            qualifications: [
                "Experience in transportation scheduling",
                "Strong organizational skills",
                "Ability to handle customer and driver coordination"
            ]
        },
        {
            title: "Customer Support Representative",
            qualifications: [
                "Strong communication skills",
                "Experience in handling customer inquiries",
                "Ability to track and update delivery status"
            ]
        }
    ];

    const jobsList = document.getElementById("jobs-list");

    jobs.forEach(job => {
        const jobCard = document.createElement("div");
        jobCard.classList.add("job-card");

        const title = document.createElement("div");
        title.classList.add("job-title");
        title.textContent = job.title;

        const qualifications = document.createElement("ul");
        qualifications.classList.add("qualifications");
        job.qualifications.forEach(qual => {
            const li = document.createElement("li");
            li.textContent = qual;
            qualifications.appendChild(li);
        });

        jobCard.appendChild(title);
        jobCard.appendChild(qualifications);
        jobsList.appendChild(jobCard);
        jobCard.classList.add("slideUp-animation");
    });
</script>
