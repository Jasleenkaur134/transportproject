  <!--bookings-->
  <div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Welcome to Your Booking Panel</h2>
  
    <!-- Current Bookings -->
    <div class="mb-5">
      <h4 class="text-primary mb-4">ðŸšš Current Bookings</h4>
      <% if (currentBookings.length > 0) { %>
        <div class="row g-4">
          <% currentBookings.forEach(booking => { %>
            <div class="col-md-6">
              <div class="card shadow-sm border border-4 border-gray bg-gray text-black rounded-4">
                <div class="card-body">
                  <h5 class="card-title fw-bold text-dark mb-3">
                    <i class="bi bi-geo-alt-fill text-danger"></i> <%= booking.from %> â†’ <%= booking.to %>
                  </h5>
                  <ul class="list-unstyled mb-3">
                    <li><strong>Name:</strong> <%= booking.name || 'N/A' %></li>
                    <li><strong>User ID:</strong> <%= booking.userId ? booking.userId.toString() : 'N/A' %></li>
                    <li><strong>Weight:</strong> <%= booking.weight %> kg</li>
                    <li><strong>Status:</strong> <%= booking.status %></li>
                    <li><strong>Price:</strong> â‚¹<%= booking.price %></li>
                    <li><strong>Delivery Date:</strong> <%= booking.formattedDDate || new Date(booking.dDate).toLocaleDateString() %></li>
                  </ul>
                  <a href="/payment/<%= booking._id %>">
                    <button type="button" class="btn btn-success w-10 rounded-pill">
                      ðŸ’³ Pay Now
                    </button>
                  </a>
                  
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted">No current bookings found.</p>
      <% } %>
    </div>
  
    <!-- Past Bookings -->
    <div>
      <h4 class="text-primary mb-4">ðŸ“¦ Past Bookings</h4>
      <% if (pastBookings.length > 0) { %>
        <div class="row g-4">
          <% pastBookings.forEach(booking => { %>
            <div class="col-md-6">
              <div class="card border-light shadow-sm bg-light rounded-4">
                <div class="card-body">
                  <h5 class="card-title fw-bold mb-3">
                    <i class="bi bi-check-circle-fill text-success"></i> <%= booking.from %> â†’ <%= booking.to %>
                  </h5>
                  <ul class="list-unstyled">
                    <li><strong>Name:</strong> <%= booking.name || 'N/A' %></li>
                    <li><strong>User ID:</strong> <%= booking.userId ? booking.userId.toString() : 'N/A' %></li>
                    <li><strong>Weight:</strong> <%= booking.weight %> kg</li>
                    <li><strong>Status:</strong> <%= booking.status %></li>
                    <li><strong>Delivered On:</strong> <%= new Date(booking.deliveryDate).toLocaleDateString() %></li>
                  </ul>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-muted">No past bookings found.</p>
      <% } %>
    </div>
